{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "ES2020",                                
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,  
    "allowSyntheticDefaultImports": true,  
    "experimentalDecorators": true,        
    "strict": true,   
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "build",
    "types": ["node", "jest"]                              
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts", "test/**/*."]
}
